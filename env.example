# Variables de entorno para APIs de generación
# ⚠️ IMPORTANTE: Copia este archivo como .env.local y reemplaza con tus claves reales.

# Replicate API (para FLUX.1 Kontext Max)
REPLICATE_API_TOKEN=your-replicate-api-token-here

# FAL API (para Veo 3)  
FAL_KEY=your-fal-key-here

# OpenRouter API (para mejora de prompts con Claude/GPT)
OPENROUTER_API_KEY=your-openrouter-key-here

# Configuraciones generales
NODE_ENV=development
VERCEL_URL=publicidad-zaimella.vercel.app

# Configuraciones de límites
MAX_IMAGE_SIZE=50MB
MAX_VIDEO_DURATION=60
MAX_GENERATIONS_PER_HOUR=100

# Configuraciones de almacenamiento
CLEANUP_OLD_FILES=true
CLEANUP_MAX_AGE_HOURS=24 